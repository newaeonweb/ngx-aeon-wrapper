{
  "name": "ngx-aeon-wrapper",
  "description": "A component library to encapsulate Angular Material and any UI framework",
  "version": "0.0.0-development",
  "author": {
    "name": "BarbaDev",
    "url": "https://barbadev.netlify.app/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/newaeonweb/ngx-aeon-wrapper.git"
  },
  "license": "MIT",
  "homepage": "https://github.com/newaeonweb/ngx-aeon-wrapper",
  "bugs": {
    "url": "https://github.com/newaeonweb/ngx-aeon-wrapper/issues"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve example-app",
    "build": "ng build example-app",
    "test": "ng test",
    "lint": "ng lint",
    "lint:lib": "ng lint ngx-aeon-wrapper",
    "watch:lib": "ng build --prod ngx-aeon-wrapper --watch",
    "build:lib": "ng build ngx-aeon-wrapper --prod",
    "pack:lib": "cd dist/ngx-aeon-wrapper && npm run package",
    "package": "npm run build:lib && npm run pack:lib",
    "e2e": "ng e2e",
    "semantic-release": "semantic-release",
    "commit": "git-cz",
    "acp": "git add . && npm run commit && git push"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "~11.2.12",
    "@angular/cdk": "^11.2.12",
    "@angular/common": "~11.2.12",
    "@angular/compiler": "~11.2.12",
    "@angular/core": "~11.2.12",
    "@angular/forms": "~11.2.12",
    "@angular/material": "^11.2.12",
    "@angular/platform-browser": "~11.2.12",
    "@angular/platform-browser-dynamic": "~11.2.12",
    "@angular/router": "~11.2.12",
    "rxjs": "~6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1102.12",
    "@angular/cli": "~11.2.12",
    "@angular/compiler-cli": "~11.2.12",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "jasmine-core": "3.7.1",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.3.2",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "1.6.0",
    "ng-packagr": "^11.2.4",
    "protractor": "~7.0.0",
    "semantic-release": "^17.4.3",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "4.1.5"
  },
  "engines": {
    "node": ">=14.0.0 <=16.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "release": {
    "pkgRoot": "dist/ngx-aeon-wrapper"
  }
